@model List<TvSets.Models.Tvset>
@{
    ViewBag.Title = "Tv Table";
}

<script type="text/javascript" src="~/Scripts/Catalog/Index/main.js"></script>

<br/>

@Html.ActionLink("Create", "Create", "Tv", new { @class = "btn btn-default btn-tvTable" })

<br />

<table class="table table-hover">
    <thead style="font-weight: bold">
        <tr>
            <td>Id</td>
            <td>Company</td>
            <td>Name</td>
            <td>Size</td>
            <td>Resolution</td>
            <td>Year</td>
            <td>Technology</td>
            <td style="width: 150px"></td>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Company.Name</td>
            <td>@Html.ActionLink(@item.Name, "View", new { id = item.Id }, null)</td>
            <td>@item.Size</td>
            <td>@item.Resolution</td>
            <td>@item.Year</td>
            <td>@item.Technology.Name</td>
            <td>@Html.ActionLink("Edit", "Edit", "Tv", new { id = item.Id }, new { @class="btn btn-default btn-tvTable", id = "btnDelete" })
            @Html.ActionLink("Delete", "Delete", "Tv", new { id = item.Id }, new { @class = "btn btn-danger btn-tvTable" })</td>
        </tr>
    }
    </tbody>
</table>


