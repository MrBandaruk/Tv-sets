@model TvSets.Models.Tvset

@{
    ViewBag.Title = "View";
}

@Scripts.Render("~/bundles/tvIndex")
@Styles.Render("~/content/tvIndex")

<h2>@Model.Company.Name @Model.Name</h2>
<br/>

        
@if (!string.IsNullOrWhiteSpace(Model.ImageLink))
{
    <img src="@Model.ImageLink" class="img-responsive img-view" alt="@Model.Name" />
}

<table class="table table-hover">
    <tr>
        <th style="width: 200px">@Html.DisplayNameFor(model => model.Technology.Name):</th>
        <td>@Html.DisplayFor(model => model.Technology.Name)</td>
    </tr>
    <tr>
        <th style="width: 200px">@Html.DisplayNameFor(model => model.Year):</th>
        <td>@Html.DisplayFor(model => model.Year)</td>
    </tr>
    <tr>
        <th style="width: 200px">@Html.DisplayNameFor(model => model.Size):</th>
        <td>@Html.DisplayFor(model => model.Size)"</td>
    </tr>
    <tr>
        <th style="width: 200px">@Html.DisplayNameFor(model => model.Resolution):</th>
        <td>@Html.DisplayFor(model => model.Resolution)</td>
    </tr>
    <tr>
        <th style="width: 200px">@Html.DisplayNameFor(model => model.Details):</th>
        <td>@Html.DisplayFor(model => model.Details)</td>
    </tr>
    <tr>
        <th style="width: 200px">@Html.DisplayNameFor(model => model.Price):</th>
        <td>@Html.DisplayFor(model => model.Price)$</td>
    </tr>
</table>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class="btn btn-default"} ) 
    <button class="btn" id="btnDelete" onclick="deleteItem(@Model.Id)">Delete</button>
    @Html.ActionLink("Back to List", "Index", null, new { @class="btn btn-default"})
</p>

<script type="text/javascript" src="~/Scripts/Catalog/Index/main.js"></script>
